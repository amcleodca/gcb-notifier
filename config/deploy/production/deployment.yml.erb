apiVersion: apps/v1
kind: Deployment
metadata:
  name: gcr-notifier
spec:
  selector:
    matchLabels:
      app: gcr-notifier
  replicas: 1
  template:
    metadata:
      labels:
        app: gcr-notifier
    spec:
      containers:
      - name: gcr-notifier
        image: gcr.io/amcleodca-fuzz/gcr-notifier/gcr-notifier:<%= current_sha %>
        command:
        - /app/gcr-notifier
        env:
          - name: GITHUB_ACCESS_TOKEN
            valueFrom:
              secretKeyRef:
                name: github-token
                key: token
          - name: GOOGLE_APPLICATION_CREDENTIALS
            value: /var/run/gcloud/gcr-notifier_amcleodca-fuzz.iam.gserviceaccount.com.json
        volumeMounts:
        - name: gcloud
          mountPath: /var/run/gcloud/
          readOnly: true
      volumes:
      - name: gcloud
        secret:
          defaultMode: 420
          secretName: gcp-service-account
